@model AddEditProductViewModel
@{
    ViewBag.MetaTitle = "Add Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card-header-right {
        position: absolute;
        right: 10px;
        top: 10px;
    }
</style>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var validator = $("#productForm").data("validator");
            validator.settings.ignore = "";
            
        });
         
        $('#Price').keypress(function (event) {
            if (event.which != 8 && isNaN(String.fromCharCode(event.which))) {
                event.preventDefault();
            }
        }); 

         

    </script>
}

<div class="pcoded-main-container add-cms-page proj-bg-color">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <!-- [ fixed-menu ] start -->
                            <div class="col-sm-12">

                                <div class="card">
                                    <div class="card-header">
                                        @if (Model.ProductID > 0)
                                        {
                                            <h5>Edit Product</h5>
                                        }
                                        else
                                        {
                                            <h5>Add Product</h5>
                                        }
                                        <div class="card-header-right">
                                            <div class="btn-group card-option">
                                                <a href="@Url.Action("Index","Home")" class="btn btn-primary">List</a>
                                                
                                                <ul class="list-unstyled card-option dropdown-menu dropdown-menu-right">
                                                    <li class="dropdown-item full-card"><a href="javascript:"><span><i class="feather icon-maximize"></i> maximize</span><span style="display:none"><i class="feather icon-minimize"></i> Restore</span></a></li>
                                                    <li class="dropdown-item minimize-card"><a href="javascript:"><span><i class="feather icon-minus"></i> collapse</span><span style="display:none"><i class="feather icon-plus"></i> expand</span></a></li>
                                                    <li class="dropdown-item close-card"><a href="javascript:"><i class="fas fa-eye-slash"></i> hide</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-block">
                                        <form asp-action="AddEditProduct" asp-controller="Home" method="POST" id="productForm" enctype="multipart/form-data" autocomplete="off" style="padding:10px">
                                            <input type="hidden" class="form-control" asp-for="ProductID">
                                           
                                            <div class="form-group row">
                                                <label class="col-sm-2">Name<span style="color: red">*</span></label>
                                                <div class="col-sm-8" style="padding-bottom:5px;padding-top:5px">
                                                    <input type="text" class="form-control" asp-for="Name">
                                                    <div class="input-group error-font-size">
                                                        <span asp-validation-for="Name" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-sm-2">Qauntity<span style="color: red">*</span></label>
                                                <div class="col-sm-8" style="padding-bottom:5px;padding-top:5px">
                                                    <input type="text" class="form-control" asp-for="Qauntity">
                                                    <div class="input-group error-font-size">
                                                        <span asp-validation-for="Qauntity" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-sm-2">Price<span style="color: red">*</span></label>
                                                <div class="col-sm-8" style="padding-bottom:5px;padding-top:5px">
                                                    @if (ViewBag.IsReadOnlyClass != "")
                                                    {
                                                        <input type="text" class="form-control" asp-for="Price" readonly="readonly">
                                                    }
                                                    else
                                                    {
                                                        <input type="text" class="form-control" asp-for="Price" maxlength="8">
                                                        <div class="input-group error-font-size">
                                                            <span asp-validation-for="Price" class="text-danger"></span>
                                                        </div>
                                                    }
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-2"></div>
                                                <div class="col-sm-4" style="padding-bottom:10px;padding-top:5px">
                                                    <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                                                    <a type="button" href="@Url.Action("Index","Home")" class="btn btn-primary">Cancel</a>
                                                </div>
                                                <div class="col-sm-6"></div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- [ fixed-menu ] end -->
                        </div>
                        <!-- [ Main Content ] end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
