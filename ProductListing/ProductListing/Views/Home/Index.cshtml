@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/scripts/productlist.js" asp-append-version="true"></script>
}
<style>
    .card-header-right {
        position: absolute;
        right: 10px;
        top: 10px;
    }
</style>
<div class="pcoded-main-container company-report">
    <div class="pcoded-wrapper">
        <div class="pcoded-content">
            <div class="pcoded-inner-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-12">
                                <div class="page-header-title">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Main Content ] start -->
                        <div class="row">
                            <!-- [ fixed-menu ] start -->
                            <div class="col-sm-12">
                                <div class="card" style="margin-bottom:10px">
                                    <div class="panel panel-default panel-toggled">
                                        <div class="card-header filter-header" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo">
                                            <h5 class="mb-0">Advance filter - Product</h5>
                                        </div>

                                        <div id="collapseTwo" class=" card-body" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                            <div class="form-group row">
                                                <label class="col-sm-1"></label>
                                                <label class="col-sm-2">Name</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control" id="txtName" />
                                                </div>
                                                <div class="col-sm-2"></div>
                                            </div>

                                           
                                            <div class="form-group row" style="padding-top:10px">
                                                <label class="col-sm-1"></label>
                                                <label class="col-sm-2"></label>
                                                <div class="col-sm-8">
                                                    <button type="button" id="ProductItemSearch" class="btn btn-primary">Search</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <h5>Product</h5>
                                        <div class="card-header-right">
                                            <div class="btn-group card-option">
                                                <a href="@Url.Action("AddEditProduct","Home")" class="btn btn-primary">Add</a>
                                                
                                               
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-block report-block">
                                        <div class="table-responsive">
                                            <table id="ProductItemList" class="display table nowrap table-striped table-hover table-bordered">
                                                <thead>
                                                    <tr>
                                                        <th>#ID</th> 
                                                        <th>Name</th>
                                                        <th>Price</th>
                                                        <th>Qauntity</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <!-- [ fixed-menu ] end -->
                            </div>
                            <!-- [ Main Content ] end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="confirmDeleteProductItemModal" tabindex="-1" role="dialog" aria-labelledby="CompanyModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <input type="hidden" id="ProductID" value="" />
                <h5 class="modal-title" id="CompanyModalLabel">
                    Are you sure to delete this Product?
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="DeleteProductItem()">
                    Yes
                </button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    No
                </button>
            </div>
        </div>
    </div>
</div>
